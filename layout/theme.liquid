<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ content_for_header }}
    
    <style>
      :root {
        --color-primary: {{ settings.colors_primary }};
        --color-secondary: {{ settings.colors_secondary }};
        --color-background: {{ settings.colors_background }};
        --color-text: {{ settings.colors_text }};
        --color-text-light: {{ settings.colors_text_light }};
        --color-border: {{ settings.colors_border }};
        --color-error: {{ settings.colors_error }};
        --color-success: {{ settings.colors_success }};
      }
    </style>
    
    {{ 'application.css' | asset_url | stylesheet_tag }}
  </head>
  <body>
    {% section 'announcement-bar' %}
    {% section 'header' %}
    
    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
    {{ 'application.js' | asset_url | script_tag }}
  </body>
</html> 