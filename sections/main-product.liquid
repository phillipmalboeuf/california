<section class="product-section">
  <div class="page-width">
    <div class="product-grid">
      <div class="product-media">
        {%- if product.media.size > 0 -%}
          <div class="product-gallery">
            {%- for media in product.media -%}
              <div class="product-gallery__item" data-media-id="{{ media.id }}">
                {%- case media.media_type -%}
                  {%- when 'image' -%}
                    {{ media | image_url: width: 1500 | image_tag:
                      loading: 'lazy',
                      width: media.width,
                      height: media.height,
                      class: "product-gallery__image"
                    }}
                  {%- when 'external_video' -%}
                    {{ media | external_video_tag: class: 'product-gallery__video' }}
                  {%- when 'video' -%}
                    {{ media | video_tag: controls: true, class: 'product-gallery__video' }}
                  {%- when 'model' -%}
                    {{ media | model_viewer_tag: class: 'product-gallery__model' }}
                {%- endcase -%}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <div class="product-info">
        {%- if section.settings.show_vendor and product.vendor -%}
          <div class="product-vendor">{{ product.vendor }}</div>
        {%- endif -%}

        <h1 class="product-title">{{ product.title }}</h1>

        <div class="product-price">
          {%- if product.price_varies -%}
            <span class="price-from">{{ 'products.product.from_price_html' | t }}</span>
          {%- endif -%}
          <span class="price" data-product-price>
            {{ product.selected_or_first_available_variant.price | money }}
          </span>
          {%- if product.compare_at_price > product.price -%}
            <span class="compare-price">{{ product.compare_at_price | money }}</span>
          {%- endif -%}
        </div>

        {%- form 'product', product, class: 'product-form', id: 'product-form', novalidate: 'novalidate' -%}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          {%- if product.variants.size > 1 -%}
            <div class="product-variants">
              {%- for option in product.options_with_values -%}
                <div class="product-option">
                  <label class="form__label" for="Option-{{ forloop.index0 }}">
                    {{ option.name }}
                  </label>
                  <select
                    id="Option-{{ forloop.index0 }}"
                    class="form__select"
                    name="options[{{ option.name | escape }}]"
                    data-option-index="{{ forloop.index0 }}"
                  >
                    {%- for value in option.values -%}
                      <option
                        value="{{ value | escape }}"
                        {% if option.selected_value == value %}selected="selected"{% endif %}
                      >
                        {{ value }}
                      </option>
                    {%- endfor -%}
                  </select>
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}

          <div class="product-quantity">
            <label class="form__label" for="Quantity">{{ 'products.product.quantity' | t }}</label>
            <div class="quantity-input">
              <button type="button" class="quantity-button" data-action="decrease">-</button>
              <input
                type="number"
                id="Quantity"
                name="quantity"
                value="1"
                min="1"
                class="form__input"
                data-quantity-input
              >
              <button type="button" class="quantity-button" data-action="increase">+</button>
            </div>
          </div>

          <div class="product-submit">
            <button
              type="submit"
              name="add"
              class="button button--primary"
              {% unless product.available %}disabled{% endunless %}
              data-add-to-cart
            >
              <span data-add-to-cart-text>
                {%- if product.available -%}
                  {{ 'products.product.add_to_cart' | t }}
                {%- else -%}
                  {{ 'products.product.sold_out' | t }}
                {%- endif -%}
              </span>
              <span class="loading-spinner hidden"></span>
            </button>

            {%- if section.settings.show_dynamic_checkout -%}
              {{ form | payment_button }}
            {%- endif -%}
          </div>
        {%- endform -%}

        {%- if section.settings.show_description -%}
          <div class="product-description rte">
            {{ product.description }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Information",
  "tag": "section",
  "class": "product-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_dynamic_checkout",
      "label": "Show dynamic checkout buttons",
      "default": true
    },
    {
      "type": "select",
      "id": "gallery_layout",
      "label": "Gallery layout",
      "options": [
        {
          "value": "stacked",
          "label": "Stacked"
        },
        {
          "value": "thumbnail",
          "label": "Thumbnail"
        },
        {
          "value": "thumbnail_slider",
          "label": "Thumbnail slider"
        }
      ],
      "default": "stacked"
    },
    {
      "type": "select",
      "id": "media_size",
      "label": "Media size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    }
  ]
}
{% endschema %}