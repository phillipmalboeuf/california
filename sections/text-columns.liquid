{{ 'section-text-columns.css' | asset_url | stylesheet_tag }}

<div class="text-columns flex flex--thick_gapped{% if section.settings.title_alignment != 'left' %} flex--column flex--middle{% endif %} padded padded--thick page-width">
  {%- if section.settings.title != blank -%}
    <h3 class="text-columns__title{% if section.settings.title_alignment != 'left' %} text-center{% else %} col col--4of12{% endif %}">{{ section.settings.title }}</h3>
  {%- endif -%}
  <div class="text-columns__grid flex flex--thick_gapped{% if section.settings.title_alignment == 'left' %} col col--8of12{% endif %}">
    {%- for block in section.blocks -%}
      <div class="text-column flex flex--column flex--gapped col" {{ block.shopify_attributes }}>
        {%- if block.settings.subtitle != blank -%}
          <h5 class="text-column__subtitle text-center">{{ block.settings.subtitle }}</h5>
        {%- endif -%}

        {%- if block.settings.thumbnail != blank -%}
          <img
            src="{{ block.settings.thumbnail | image_url: width: 200 }}"
            alt="{{ block.settings.thumbnail.alt | escape }}"
            loading="lazy"
            width="100%"
            height="auto"
            class="text-column__thumbnail"
          >
        {%- endif -%}

        {%- if block.settings.showStars -%}
          <div class="text-column__stars">
            ★★★★★
          </div>
        {%- endif -%}

        {%- if block.settings.text != blank -%}
          <div class="text-column__text">{{ block.settings.text }}</div>
        {%- endif -%}

        {%- if block.settings.author != blank -%}
          <div class="text-column__author h6 h--alt">{{ block.settings.author }}</div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Text Columns",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Reasons to love California Naturals"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Subtitle text"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text Content",
          "default": "<p>Share your thoughts, testimonials, or any other content here.</p>"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "checkbox",
          "id": "showStars",
          "label": "Show Star Rating",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Columns",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %} 