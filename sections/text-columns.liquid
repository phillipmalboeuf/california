{{ 'section-text-columns.css' | asset_url | stylesheet_tag }}

<div class="text-columns padded page-width">
  <div class="text-columns__grid flex flex--gapped">
    {%- for block in section.blocks -%}
      <div class="text-column col" {{ block.shopify_attributes }}>
        {%- if block.settings.subtitle != blank -%}
          <h5 class="text-column__subtitle text-center">{{ block.settings.subtitle }}</h5>
        {%- endif -%}

        {%- if block.settings.thumbnail != blank -%}
          <img
            src="{{ block.settings.thumbnail | image_url: width: 200 }}"
            alt="{{ block.settings.thumbnail.alt | escape }}"
            loading="lazy"
            width="100"
            height="100"
            class="text-column__thumbnail"
          >
        {%- endif -%}

        {%- if block.settings.showStars -%}
          <div class="text-column__stars">
            ★★★★★
          </div>
        {%- endif -%}

        {%- if block.settings.text != blank -%}
          <div class="text-column__text">{{ block.settings.text }}</div>
        {%- endif -%}

        {%- if block.settings.author != blank -%}
          <div class="text-column__author">{{ block.settings.author }}</div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Text Columns",
  "tag": "section",
  "class": "section",
  "settings": [
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Subtitle text"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text Content",
          "default": "<p>Share your thoughts, testimonials, or any other content here.</p>"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "checkbox",
          "id": "showStars",
          "label": "Show Star Rating",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Columns",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %} 