{% style %}
.video-with-text {
  margin: var(--step-3) auto;
}

.video-with-text__grid {
  display: grid;
  gap: var(--step-2);
  grid-template-columns: 1fr;
}

@media screen and (min-width: 750px) {
  .video-with-text__grid {
    grid-template-columns: 1fr 1fr;
    align-items: center;
  }
}

.video-with-text__wrapper video,
.video-with-text__wrapper iframe {
  width: 100%;
  aspect-ratio: 16/9;
}

.video-with-text__content {
  text-align: var(--text-alignment);
}

.video-with-text__heading {
  margin-bottom: var(--step-1);
}
{% endstyle %}

<div class="video-with-text color-{{ section.settings.color_scheme }}">
  <div class="video-with-text__grid page-width">
    <div class="video-with-text__wrapper">
      {% if section.settings.video_url != blank %}
        {% if section.settings.video_url contains 'cdn.shopify.com' %}
          <video {% if section.settings.autoplay %}autoplay muted loop{% else %}controls{% endif %}>
            <source src="{{ section.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% else %}
          <iframe 
            src="{{ section.settings.video_url }}" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        {% endif %}
      {% endif %}
    </div>

    <div class="video-with-text__content">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {% when 'heading' %}
            <h2 class="video-with-text__heading" {{ block.shopify_attributes }}>
              {{ block.settings.heading | escape }}
            </h2>
          {% when 'text' %}
            <div class="video-with-text__text rte" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
        {% endcase %}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video with text",
  "tag": "section",
  "class": "section section-video-with-text section-media-text",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "default"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "Paste your video URL here (YouTube, Vimeo, or direct video link)"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay video",
      "default": false,
      "info": "Video will be muted when autoplaying"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left",
      "label": "Text alignment"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Video with text",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with a video to share your story</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video with text",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %} 