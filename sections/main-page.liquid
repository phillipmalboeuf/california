{{ 'section-main-page.css' | asset_url | stylesheet_tag }}
{% comment %} {{ 'shogun-override.css' | asset_url | stylesheet_tag }} {% endcomment %}

<div class="page-width padded padded--thick">
  {%- unless section.settings.hide_title -%}
    <h1 class="main-page-title page-title text-center h2">{{ page.title | escape }}</h1>
  {%- endunless -%}
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section", 
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "hide_title",
      "label": "Hide title",
      "default": false
    }
  ]
}
{% endschema %}